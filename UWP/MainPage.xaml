<Page
    x:Class="UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP"
    xmlns:models="using:SharedUwpLibrary.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="btnTempHum" Grid.Row="0" Click="btnTempHum_Click_1" Content="Button" Height="180" Width="600" HorizontalAlignment="Center" />

        <ListView x:Name="lvTempHum" ItemsSource="{x:Bind}" Grid.Row="1" Margin="20" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding  }" />
                        <TextBlock Text="{Binding}" />
                    </StackPanel> 
                </DataTemplate>
            </ListView.ItemTemplate> 
        </ListView>
    
    </Grid>
</Page>
